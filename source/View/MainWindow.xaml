<appbar:AppBarWindow x:Class="Sidecab.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:appbar="clr-namespace:WpfAppBar"
    mc:Ignorable="d"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="14"
    Title="Sidecab" Height="450" Width="800" MinWidth="1" ShowInTaskbar="False"
    Monitor="{Binding DisplayToDock}" DockMode="{Binding DockMode}" DockedWidthOrHeight="{Binding Settings.KnobWidth}">

    <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{Binding Settings.KnobBrush}" MouseDown="border_MouseDown"/>

</appbar:AppBarWindow>
